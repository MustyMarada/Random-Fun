public class fiveLittleMonkeys {
    public static void main(String[] args) {
        // Array containing the string representation of the numbers
        String[] numbers = {"Five", "Four", "Three", "Two", "One"};
        
        int index = 0;

        // Loop through each number
        while (index < numbers.length) {
            String monkeyCount = numbers[index];

            // If we should use singular or plural form
            String monkeys = index == numbers.length - 1 ? "monkey" : "monkeys";
            
            System.out.println(monkeyCount + " little " + monkeys + " jumping on the bed,");
            System.out.println("One fell down and bumped his head,");
            System.out.println("Mama called the doctor and the doctor said,");
            System.out.println("\"No more monkeys jumping on the bed!\"");
            System.out.println(); // Print an empty line for better readability

            // Increment the index to move to the next number
            index++;
        }
        
        System.out.println("One little monkey left the bed,");
        System.out.println("And now it's time to rest instead.");
    }
}
